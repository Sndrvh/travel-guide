<h1>Locations</h1>
<p><%= link_to "Add a new location", new_location_path%></p>

<div class="locations">
  <% @locations.each do |location| %>
  <div class="location">
    <h2> City: <%= link_to location.title, location_path(location.id)%></h2>
    <p><strong>Picture:</strong><br><%= image_tag(location.header_image, width:300) %>  </p>
    <p><strong>Subtitle:</strong><br> <%=location.subtitle%></p>
    <p><strong>Description:</strong><br><%=location.description%></p>
  </div>
  <hr/>
  <% end %>
</div>
