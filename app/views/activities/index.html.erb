<h1>Activities</h1>
<p><%= link_to "Add a new activity", new_activity_path%></p>

<div class="activities">
  <% @activities.each do |activity| %>
  <div class="activity">
    <h2> Activity: <%= link_to activity.title, activity_path(activity.id)%></h2>
    <p><strong>Location:</strong> <%=activity.location_id%> </p>
    <p><strong>Picture:</strong><br><%= image_tag(activity.image, width:300) %>  </p>
    <p><strong>Description:</strong><br><%=activity.description%></p>
  </div>
  <hr/>
  <% end %>
</div>
